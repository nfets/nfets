{
  "name": "@nfets/core",
  "version": "0.0.1",
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsc && tsc-alias",
    "test": "jest"
  },
  "dependencies": {
    "crypto": "^1.0.1",
    "decimal.js": "^10.4.3",
    "node-forge": "^1.3.1",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@types/node-forge": "^1.3.11",
    "@types/xml2js": "^0.4.14"
  },
  "exports": {
    ".": "./dist/index.js"
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "workerIdleMemoryLimit": "2048MB",
    "maxWorkers": "90%",
    "maxConcurrency": 5,
    "passWithNoTests": true,
    "detectOpenHandles": true,
    "forceExit": true,
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.test.json"
        }
      ]
    },
    "coverageThreshold": {
      "global": {
        "statements": 98,
        "branches": 98,
        "lines": 98,
        "functions": 98
      }
    },
    "collectCoverageFrom": [
      "src/**/*.(t|j)s"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/coverage/",
      "/dist/"
    ],
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/src/$1",
      "^test/(.*)$": "<rootDir>/test/$1"
    },
    "coverageDirectory": "coverage",
    "testEnvironment": "node"
  }
}
